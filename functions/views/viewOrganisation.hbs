    <script>
      $(function() {
        const orgID = "{{organisation.id}}";
        const db = firebase.firestore();
        db.settings({
          timestampsInSnapshots: true
        });
        const slotsRef = db.collection("slots").where("organisationID", "==", orgID);
        slotsRef.onSnapshot(function(querySnapshot) {
          $("#slotList").empty();
          querySnapshot.forEach(function(doc) {
            let slot = doc.data();
            $("#slotList").append(`
            <div class="col-lg-4 col-md-6 col-sm-12">
                  <a href="https://console.olympusorg.com/o/${orgID}/slots/${slot.name}" class="custom-card">
                    <div class="card mb-4">
                      <div class="card-body">
                        <p class="card-title h5">${slot.name}</p>
                        <p class="card-text">${slot.description}</p>
                        <div class="d-flex justify-content-between">
                          <span class="text-muted"><i class="fas fa-star"></i> 56</span>
                          <span class="text-muted"><i class="fas fa-retweet"></i> 20k</span>
                          <span class="text-muted"><i class="fas fa-globe"></i> 250</span>
                          <span class="text-muted"><i class="fas fa-gavel"></i> MIT</span>
                        </div>
                      </div>
                      </div>
                    </a>
                  </div>`);
          });
